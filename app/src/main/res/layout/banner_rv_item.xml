<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:ignore="HardcodedText,ContentDescription">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/promotion_image"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/titleBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/super_sale"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleBanner"
                android:layout_marginStart="24dp"
                android:layout_marginTop="29dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bannerHour"
                    android:layout_width="42dp"
                    android:layout_height="41dp"
                    android:background="@drawable/ic_time_rectangle"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="08"
                    android:textColor="@color/timeColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_couple_dot"
                  />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bannerMin"
                    android:layout_width="42dp"
                    android:layout_height="41dp"
                    android:background="@drawable/ic_time_rectangle"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="34"
                    android:textColor="@color/timeColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_couple_dot" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bannerSec"
                    android:layout_width="42dp"
                    android:layout_height="41dp"
                    android:background="@drawable/ic_time_rectangle"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="52"
                    android:textColor="@color/timeColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>